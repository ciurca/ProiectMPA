@model IEnumerable<ProiectMPA.Models.Category>
@{
    ViewData["Title"] = "Menu";
}

<h1 class="mb-4">Menu</h1>
<ul class="nav nav-tabs">
    @foreach(var category in Model)
    {
    <li class="nav-item">
        <a class="nav-link" href="#@category.Name">@category.Name</a>
    </li>
    }
</ul>
<br />
@foreach (var category in Model)
{
    <div class="mb-5">
        <h3 class="mb-3" id="@category.Name">@category.Name</h3>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var menuItem in category.MenuItems)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@menuItem.ImageURL" class="card-img-top" alt="Image of @menuItem.Name" style="object-fit: cover; height: 200px;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
									<a asp-controller="MenuItems" asp-action="Details" asp-route-id="@menuItem.Id">
									@menuItem.Name
									</a> 
							</h5>
                            <p class="card-text text-muted flex-grow-1">@menuItem.Description</p>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="fw-bold">
									@Html.DisplayFor(m => menuItem.Price)
								</span>
                                @if(User.Identity.IsAuthenticated && User.IsInRole("User")) 
                                {
                                <button class="btn btn-primary rounded">
                                    Add
                                </button>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
